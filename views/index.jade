div(class='container')
    div(class='row')
        div(class='col-md-12')
            div(id='map-canvas')
    div(class='row')
        div(class='col-lg-12')
            h1 Meet Me in the Middle
    div(class='row')
        div(class='col-md-8')
            div(class='row')
                div(class='column col-md-6', id='location_1')
                    div(class='form-group input-group')
                        input(type=text, placeholder='Where are you?', id='location_input_1', class='location_input form-control')
                        span(class='input-group-btn')
                            button(class='btn btn-default', id='my_location', type='button') 
                                img(src='/images/ajax-loader.gif', class='loading')
                                span(class='fui-radio-checked') 
                    ul(id='results_1', class='results list-group')
                div(class='column col-md-6', id='location_2')
                    div(class='form-group')
                        input(type=text, placeholder='Where are they?', id='location_input_2', class='location_input form-control')
                    ul(id='results_2', class='results list-group')
            div(class='row')
                div(class='col-md-12', id='locations_list')
                    ul(class='list-group')

        div(class='col-md-4')
            div(class='form-group')
                a(href='#', class='btn btn-primary', id='meet_btn') Let's meet!
                div(class='input-group type_selector')
                    label(class='radio checked')
                        span(class='icons')
                            span(class='first-icon fui-radio-unchecked')
                            span(class='second-icon fui-radio-checked')
                        input(type='radio', name='type_of_place', id='bar', value='bar', data-toggle='radio', checked='checked') 
                        span Drinks
                    label(class='radio')
                        span(class='icons')
                            span(class='first-icon fui-radio-unchecked')
                            span(class='second-icon fui-radio-checked')
                        input(type='radio', name='type_of_place', id='restaurant', value='restaurant', data-toggle='radio') 
                        span Food
                    label(class='radio')
                        span(class='icons')
                            span(class='first-icon fui-radio-unchecked')
                            span(class='second-icon fui-radio-checked')
                        input(type='radio', name='type_of_place', id='cafe', value='cafe', data-toggle='radio') 
                        span Coffee